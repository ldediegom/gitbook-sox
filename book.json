{
    "title": "Sistemes Operatius en Xarxa",
    "author": "Sergi Coll",
    "language": "ca",
    "plugins": [
        "etoc",
        "-highlight",
        "-sunlight-highlighter",
        "quiz",
        "collapsible-chapters",
        "back-to-top-button",
        "styles-less"
    ],
    "styles": {
        "pdf": "./styles/pdf.css",
        "website": "./styles/website.css"
    },
    "pluginsConfig": {
        "etoc": {
            "mindepth": 2,
            "maxdepth": 4,
            "notoc": false
        },
        "theme-default": {
            "showLevel": true
        },
        "quiz": {
            "labels": {
                "check"             : "Verificar resposta",
                "showExplanation"   : "Explain", 
                "showCorrect"       : "Solució",   
                "explanationHeader" : "Explanation"
            },
            "text": {
                "noChosen"    : "Tria com a mínim una resposta",  
                "incomplete"  : "Some correct answers are missing" 
            },
            "buttons": {
                "showCorrect"       : true, 
                "showExplanation"   : true 
            }
        },
        "collapsible-chapters":{}
    },
    "wkhtmltopdf": {
        "cover": "cover.html",
        "tocXsl": "styles/wk_toc.xsl",
        "header": {"contentHtml": "styles/wk_header.html"},
        "assets": [
          "styles/wk_headerfooter.less",
          "styles/wk_toc.less",
          "styles/wk_toc.xsl"
        ]
      }
}