{
    "plugins": [
        "etoc",
        "styles-sass",
        "customtheme",
        "-highlight",
        "sunlight-highlighter",
        "quiz"
    ],
    "styles": {
        "pdf": "styles/pdf.sass",
        "website": "styles/website.css"
    },
    "pluginsConfig": {
        "etoc": {
            "mindepth": 2,
            "maxdepth": 4,
            "notoc": false
        },
        "customtheme": {
            "css": [
                "styles/website.css"
            ]
        },
        "theme-default": {
            "showLevel": true
        },
        "quiz": {
            "labels": {
                "check"             : "Check my answers",
                "showExplanation"   : "Explain", 
                "showCorrect"       : "Show all",   
                "explanationHeader" : "Explanation"
            },
            "text": {
                "noChosen"    : "Choose at least one answer",  
                "incomplete"  : "Some correct answers are missing" 
            },
            "buttons": {
                "showCorrect"       : true, 
                "showExplanation"   : true 
            }
    }
    },
    "title": "Sistemes Operatius en Xarxa",
    "author": "Sergi Coll",
    "language": "es"
}